extends layout

block append head
  script(src='/js/admin.js')

block hnav
  li
    a(href='#') Home
  li
    a(href='#') Home

block content
  .alert.alert-error.alert-block.hide
    .alertmsg
      i.icon-warning-sign
      strong &nbsp;Warning&nbsp;
      span.error error
  if locals.blogposts
    table.table.table-striped.bloglist
      tr
        th Title
        th Category
        th Tags
        th Action
      each post in blogposts
        tr
          td #{post.title}
          td #{post.category}
          td #{post.tags}
          td
            a.btn.btn-mini(href='edit_post/#{post._id}') Edit
            a.btn.btn-mini.btn-danger(href='javascript:deletePost("#{post._id}")') Delete

block rightnav
  ul.nav.nav-list
    li.nav-header Admin Functions
    each navitem in admin_nav
      li
        a(href='#{navitem.link}') #{navitem.name}
