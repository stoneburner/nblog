extends layout

block hnav
  li
    a(href='#') Home
  li
    a(href='#') Home

block content
  each post in blogposts
    .blogpost
      h1 #{post.title}
      .blogcontent !{post.html}
      .blogmeta
        | published by
        | #{post.user}
        | &nbsp;
        i.icon-calendar
        | &nbsp; #{post.publish_time}
      .tags
        | tags &nbsp;
        each tag in post.tags
          a.label(href='/blog/tag/'+tag)
            i.icon-tag
            | &nbsp; #{tag}
          | &nbsp;

block rightnav
  ul.nav.nav-list
    li.nav-header Lastest Posts
    li
      a(href='#') Foo
    li
      a(href='#') Bar
    li.nav-header Tags
    li
      a(href='#') Foo
    li
      a(href='#') Bar
